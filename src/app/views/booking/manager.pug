.btn {
  padding: 8px 15px;
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  text-align: center;
  transition: background-color 0.3s ease;
}

.btn-primary {
  background-color: #007bff;
}

.btn-primary:hover {
  background-color: #0056b3;
}

.btn-primary:active {
  background-color: #004085;
}

.badge {
  padding: 5px 10px;
  font-size: 14px;
  color: #fff;
  border-radius: 5px;
  text-transform: uppercase;
}

.badge-paid {
  background-color: #28a745;
}

.badge-pending {
  background-color: #ffc107;
  color: #333;
}

