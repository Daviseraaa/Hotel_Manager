extends ../layout/room.pug

include ../../mixins/room.pug

block content 
    h1 Quản lý phòng 
    a(href="/rooms/createroom")
        button Thêm phòng 

    // Lặp qua tất cả các phòng và hiển thị thông tin
    if rooms && rooms.length > 0
        each room in rooms
            +roomBox(room)    
    else
      p Không có phòng nào để hiển thị.

block script 
    script(src="/js/roomManager.js") 
